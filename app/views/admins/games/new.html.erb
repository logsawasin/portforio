<h2 class="form-title">ゲーム投稿</h2>

<div class="form-container">
  <%= form_with model: @game, url: admins_games_path, multipart: true do |f| %>
    <div class="form-group">
      <label>ゲーム名</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>概要</label>
      <%= f.text_area :body, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group">
      <label>カテゴリー</label>
      <%= f.text_field :tag, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>ゲーム画像</label>
      <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
    </div>

    <div class="form-actions">
      <%= f.submit "投稿", class: "btn btn-submit" %>
    </div>
  <% end %>
</div>
