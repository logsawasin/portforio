<div>
  <% if @game.image.attached? %>
    <%= image_tag @game.image, size: "450x150" %>
  <% else %>
    <%= image_tag 'no_image', size: "450x150" %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>タイトル名</th>
      <td><%= @game.title %></td>
    </tr>
    <tr>
      <th>概要</th>
      <td><%= @game.body %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= @game.tag %></td>
    </tr>
  </thead>
</table>

<h5><%= link_to "攻略情報作成", new_strategy_path(game_id: @game.id) %></h5>
<h4>攻略情報</h4>
<% @game.strategies.each do |strategy| %>
  <p><%= link_to strategy.title, strategy_path(strategy) %></p>
<% end %>
<%= link_to "編集", edit_game_path(@game.id) %>
