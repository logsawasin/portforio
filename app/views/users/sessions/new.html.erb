<div class="login-container">
  <h2 class="login-title">Log in（ユーザー）</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group remember-me">
        <%= f.check_box :remember_me, class: "form-checkbox" %>
        <%= f.label :remember_me, class: "checkbox-label" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit "Log in", class: "btn-login" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "users/shared/links" %>
  </div>
</div>
