<h4>ユーザー詳細（ユーザー）</h4>
<%= @user.name %><br/>
  <% if @user.image.attached? %>
    <%= image_tag @user.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<table>
    <th><td><%= link_to "編集", edit_user_path(@user.id) %></td></th>
    <th><td><%= link_to "削除", user_path(@user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td></th>

